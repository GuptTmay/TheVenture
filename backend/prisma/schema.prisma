generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstname String? @db.VarChar(20)
  lastname  String? @db.VarChar(20)
  email     String  @unique @db.VarChar(30)
  password  String 
}
